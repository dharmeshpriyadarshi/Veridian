// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          Role      @default(USER)
  isResearcher  Boolean   @default(false)
  
  // Researcher-specific fields
  institution   String?
  researchArea  String?
  credentials   String?   // JSON string for credentials
  verifiedAt    DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  sessions      Session[]
  predictions   Prediction[]
  simulations   Simulation[]
  searches      Search[]
  
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model PollutionData {
  id          String   @id @default(cuid())
  location    String
  latitude    Float
  longitude   Float
  date        DateTime
  
  // Pollutant levels
  pm25        Float?
  pm10        Float?
  no2         Float?
  o3          Float?
  co          Float?
  so2         Float?
  
  // Environmental factors
  temperature Float?
  humidity    Float?
  pressure    Float?
  windSpeed   Float?
  
  // Calculated values
  aqi         Int?
  pollutionIndex Float?
  
  source      String   @default("api") // api, model, manual
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([location, date])
  @@index([latitude, longitude])
}

model Prediction {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  location    String
  latitude    Float
  longitude   Float
  
  // Prediction details
  predictionDate DateTime
  predictedAQI   Int
  predictedPM25  Float
  confidence     Float   // 0-1
  
  // Model info
  modelVersion String
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([location, predictionDate])
}

model Simulation {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  location    String
  latitude    Float
  longitude   Float
  area        Float    // in square km
  
  // Current pollution
  currentAQI  Int
  currentPI   Float    // Pollution Index
  
  // Simulation results
  treesNeeded Int
  projectedReduction Float // percentage
  projectedAQI Int
  
  // Tree placement (JSON)
  treePlacements String? // JSON array of coordinates
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([location])
}

model Search {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  query     String
  location  String?
  latitude  Float?
  longitude Float?
  
  resultCount Int     @default(0)
  
  createdAt DateTime @default(now())
  
  @@index([userId])
}

enum Role {
  USER
  RESEARCHER
  ADMIN
}
